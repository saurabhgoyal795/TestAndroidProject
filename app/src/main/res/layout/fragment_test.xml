<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/questionNumberList"
                android:layout_width="match_parent"
                android:background="@color/white_alpha_10"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left: "
                    android:textColor="@color/ca_blue"
                    android:alpha=".87"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/timeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:alpha=".87"
                    android:textColor="@color/ca_blue"/>
            </LinearLayout>
            <TextView
                android:id="@+id/questionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q 1/100"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ca_blue"
                android:alpha=".87"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/pointWin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2"
                    android:textColor="@color/ca_green"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" , "
                    android:textColor="@color/ca_blue"
                    android:alpha=".87"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/negativePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-0.25"
                    android:textSize="14sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/questionConatiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topHeader"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/topHeader"
        android:background="@drawable/shadow_header"/>
</RelativeLayout>