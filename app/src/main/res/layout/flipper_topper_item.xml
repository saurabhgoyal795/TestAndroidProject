<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:rotation="180"
            android:src="@drawable/half_circle_button"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:src="@drawable/profile" />
    </RelativeLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/imageLayout"
        android:layout_toLeftOf="@+id/rankLayout"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Harish MeeNA"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/ca_blue"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Civil Engeering"
            android:singleLine="true"
            android:ellipsize="end"
            android:alpha=".87"
            android:textColor="@color/ca_blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rollNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No:26162"
            android:singleLine="true"
            android:alpha=".87"
            android:ellipsize="end"
            android:textColor="@color/ca_blue"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exam"
            android:alpha=".87"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/ca_blue"
            android:textSize="12sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rankLayout"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        android:layout_height="60dp"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="70dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:src="@drawable/half_circle_button"/>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:alpha=".87"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="25sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>