<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector_transparent_5_black">
        <ImageView
            android:id="@+id/planImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/samplepackage" />
        <TextView
            android:id="@+id/planText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2B3E50"
            android:gravity="center_horizontal"
            android:text="CLASS ROOM TEST SERIES - 2020"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
        <TextView
            android:id="@+id/extraDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ca_blue"
            android:gravity="center_horizontal"
            android:text="-"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:alpha=".70"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>