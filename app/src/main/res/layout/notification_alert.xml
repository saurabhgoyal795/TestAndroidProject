<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.averda.online.views.ZTWebView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ca_blue"
                android:gravity="center"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/adminComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Comment"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
            <com.averda.online.views.ZTWebView
                android:id="@+id/adminWebview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ca_blue"
                android:gravity="center"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
            <com.averda.online.views.ZTWebView
                android:id="@+id/commentWebview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ca_blue"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/ca_blue"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue_rounded"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:paddingRight="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="10dp"
                    android:text="Cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/ok"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue_rounded"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:text="OK"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>