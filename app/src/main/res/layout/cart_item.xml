<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/deleteButton"
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSMSSB-JE ( B.TECH ) ONLINE TEST SERIES"
                    android:textColor="@color/ca_blue"
                    android:maxLines="2"
                    android:minLines="2"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:alpha=".87"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Test Series"
                    android:textColor="@color/ca_blue"
                    android:textSize="14sp"
                    android:alpha=".87"/>
                <TextView
                    android:id="@+id/priceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1000.00 ₹1500.00 (33%Off)"
                    android:textSize="14sp"
                    android:textColor="@color/ca_blue"
                    android:alpha=".87"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:background="@drawable/list_selector_transparent_5_black"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_delete_white_24"
                android:tint="@color/red"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>